<TestingButton>:
    test: "Testing Button"

<TestHeading@Label>:
    size_hint_max_y: 36

<TestingMenu>:
    orientation: 'vertical'
    TestHeading:
        text: "SETUP TESTS"
    BoxLayout:
        orientation: 'horizontal'
        TestingButton:
            text: "Populate Database"
            on_release: Factory.DbPopulatePopup().open()
        TestingButton:
            text: "Initialize Inventory"
            on_release: Factory.InventoryInitPopup().open()
    TestHeading:
        text: "SEARCH AND VIEW TESTS"
    BoxLayout:
        orientation: 'horizontal'
        TestingButton:
            text: "Show Product"
            on_release: root._test_product_view('Volt Prime')
        TestingButton:
            text: "Show Component"
            on_release: root._test_component_view('Volt Prime Chassis Blueprint')
        TestingButton:
            text: "Show Relic"
            on_release: root._test_relic_view()
    TestHeading:
        text: "UNIT TESTS"
    BoxLayout:
        orientation: 'horizontal'
        TestingButton:
            text: "DbEntryListing"
            on_release: root._test_DbEntryListing_subclasses()
    Button:
        text: "Close App"
        on_release: app.stop()
